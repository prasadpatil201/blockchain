
# N-Queens Problem (Simple Version)

# Function to print the chessboard nicely
def print_board(board, n):
    for i in range(n):
        for j in range(n):
            if board[i][j] == 1:
                print("Q", end=" ")  # Queen
            else:
                print(".", end=" ")  # Empty space
        print()  # Move to next line
    print()  # Blank line after the board

# Function to check if it's safe to put a queen at board[row][col]
def is_safe(board, row, col, n):
    # Check this column on all previous rows
    for i in range(row):
        if board[i][col] == 1:
            return False

    # Check upper-left diagonal
    i, j = row - 1, col - 1
    while i >= 0 and j >= 0:
        if board[i][j] == 1:
            return False
        i -= 1
        j -= 1

    # Check upper-right diagonal
    i, j = row - 1, col + 1
    while i >= 0 and j < n:
        if board[i][j] == 1:
            return False
        i -= 1
        j += 1

    return True  # No attacks — safe position

# Function to solve the problem using recursion
def solve(board, row, n):
    # If we placed queens in all rows, print board
    if row == n:
        print_board(board, n)
        return True

    # Try placing queen in each column
    for col in range(n):
        if is_safe(board, row, col, n):
            board[row][col] = 1  # Place queen
            if solve(board, row + 1, n):  # Move to next row
                return True
            board[row][col] = 0  # Remove queen (backtrack)

    return False  # No place found in this row

# --- Main Part ---
n = int(input("Enter number of queens: "))

# Create an empty board (2D list of zeros)
board = [[0 for _ in range(n)] for _ in range(n)]

# Start solving
if not solve(board, 0, n):
    print("No solution exists")# N-Queens Problem (Simple Version)


import heapq


class Node:
    def __init__(self, freq, symbol, left=None, right=None):
        self.freq = freq
        self.symbol = symbol
        self.left = left
        self.right = right
        self.huff = ''

    def __lt__(self, nxt):
        return self.freq < nxt.freq


def print_codes(node, val='', codes={}):
    newval = val + str(node.huff)

    if node.left:
        print_codes(node.left, newval, codes)

    if node.right:
        print_codes(node.right, newval, codes)

    if not node.left and not node.right:
        codes[node.symbol] = newval

    return codes


if __name__ == "__main__":
    string = input("Enter a string: ")

    freq = {}
    for ch in string:
        freq[ch] = freq.get(ch, 0) + 1

    chars = list(freq.keys())
    freqs = list(freq.values())

    nodes = []
    for i in range(len(chars)):
        heapq.heappush(nodes, Node(freqs[i], chars[i]))

    while len(nodes) > 1:
        left = heapq.heappop(nodes)
        right = heapq.heappop(nodes)

        left.huff = 0
        right.huff = 1

        newnode = Node(left.freq + right.freq,
                        left.symbol + right.symbol,
                        left,
                        right)
        heapq.heappush(nodes, newnode)

    codes = print_codes(nodes[0])

    print("Input string:", string)
    print("Symbols:", list(freq.keys()))
    print("Frequencies:", list(freq.values()))
    print("Symbols with codes:", codes)

    encoded_output = ''.join([codes[ch] for ch in string])
    before = len(string) * 8
    after = len(encoded_output)

    print("Space usage before compression (in bits):", before)
    print("Space usage after compression (in bits):", after)
    print("Encoded output:", encoded_output)
